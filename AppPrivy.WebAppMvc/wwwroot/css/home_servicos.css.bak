
.aui-font-header-service {
    font-size: larger;
}

.aui-font-subtitle-service {
    font-size: x-large;
}

ul.list li { 
    position: relative;
    padding: 0px 0px 10px 18px;
    
}


    ul.list li:before {
        content: "\f0a4";
        font-family: 'Font Awesome 5 Free';
        font-size: 12px;
        margin-left: 13px;
        float: left;
        margin-left: -17px;
        color: #3F3F3F;
        position: relative;
        margin-right: 15px;
        top:5px;
      
    }
   

.content {
    position: relative;
    margin-bottom: 10%;
    width: 100%;
}

.thumbnail {
    cursor: pointer;  
    overflow:hidden;
    padding: 0 0 0 0;
}


    div.card > img {
        transform: scale(1.0,1.0);
        transition: ease 2s;
    }


        div.card:hover img {
            cursor: pointer;
            transform: scale(0.8,0.8);
            perspective: 2000px;
            transition: ease 2s;
            text-decoration: none;
        }

   



.textNot {
    text-decoration: none;
    text-decoration-style: none;
    text-transform: uppercase;
}


.caption {
    margin-top: 30px;
    clear: both;
    opacity: 0.9;
    background-color: #3F3F3F;
    border-right:15px solid #3F3F3F;
    border-left:15px solid #3F3F3F;
}

h3.go-center {
    color: white;
    position:relative;
    top:-5px;
}

