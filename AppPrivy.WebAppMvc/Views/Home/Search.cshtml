@model IEnumerable<AppPrivy.Application.ViewsModels.PesquisaViewModel>

@{
    ViewBag.Title = "Pesquisa";

 }

<div class="container-fluid  margin-footer clearfix">

    <div class="container page-header  mt-5 mb-3">
      
        <h1>Pesquisa<small class="text-muted">  - resultados encontrados (@{if (Model != null)
            {@Html.Raw(Model.Count().ToString());
        }
        else
        { @Html.Raw("0");
    } }) </small></h1><hr />

    </div>

    <div class="container" id="container">

        <div class="row">
            <div class="col-md-12">

                @if (@Model!=null && Model.Count()>0) {
               

                    for (int i = 0; i < Model.Count(); i++)
                    {

                        <div  class="shadow-sm p-3 mb-5 bg-white rounded  border-left-1 border-info float-left">
                            <h4 class="text-dark">@Model.ElementAt(i).Titulo</h4>
                            <p class="text-muted">@Model.ElementAt(i).Descricao</p>
                            <hr class="my-4">
                            <a href="@(string.Format("{0}", Model.ElementAt(i).Url))" class="btn btn-outline-secondary float-right">Saber mais </a>
                        </div>

                      

                    }

                }



            </div>

        </div>
    </div>

</div>

