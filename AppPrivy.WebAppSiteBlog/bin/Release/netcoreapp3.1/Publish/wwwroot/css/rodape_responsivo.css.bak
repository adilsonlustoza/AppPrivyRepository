

/*------------------------------------------------------Menu Superior-------------------------------------------------------*/
@media screen and (min-width: 0px) and (max-width: 319px) {
    .aui-footer-background {
        position: absolute;
        width: 100%;
        color: #FFFFFF;
        background-color: #3F3F3F;
        border-top: 4px solid #0085B2;
        bottom: 0px;
        overflow: hidden;
        z-index: 999;
    }

    span.aui-footer-direitos {
        position: relative;
        display: inline-block;
        font-size: xx-small;
        word-wrap: break-word;
        word-break: break-word;
        width: 60%;
        top: 10px;
        left: 0;
    }

    ul.aui-footer-redeSocial {
        position: relative;
        width: 40%;
        display: inline-block;
        top: 10px;
        float: right;
        left: 10%;
    }

        ul.aui-footer-redeSocial li {
            position: relative;
            display: inline-block;
            list-style: none;
            padding-top: 2%;
            padding-left: 1%;
            padding-right: 1%;
            padding-bottom: 2%;
        }




    .aui-footer-redeSocial li img.img-responsive {
        width: 50%;
        z-index: 999;
    }
}

