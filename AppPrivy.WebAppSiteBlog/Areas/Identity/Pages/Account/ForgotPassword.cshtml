@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<div class="container-fluid margin-footer">


    <div class="container page-header  mt-5 mb-3">

        <h1>Recuperar senha<small class="text-muted"> -   nova senha por e-mail </small></h1><hr />


    </div>

    <div class="container" id="container">

        <div class="col-sm-12">

            <div class="row">
                <div class="col-sm-10">
                    <section id="loginForm">

                        <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="form-horizontal" role="form">
                                     
                                <div class="form-group">
                                    <label asp-for="Input.Email" class="col-sm-2 control-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <input type="submit" class="btn btn-outline-primary" value="Enviar" asp-page-handler="ForgotPassword" />
                                        <a asp-page="./Login" class="btn btn-outline-secondary">Voltar</a>
                                    </div>
                                </div>
                            </form>

                    </section>

                </div>
            </div>

        </div>

    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
